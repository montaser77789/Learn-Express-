html(lang="en")
    head
        link(rel="stylesheet", href="/styles/global.css")
        title Products
    body 
    .container
        h1.page-title= productTitle
        .product-grid
            each product in products
                .product-info
                    .product-text
                        a(href=`product/${product.id}`)
                            h2= product.title
                        p=  product.description
                    .product-price-btn
                        span= product.price
                        | $
                        button(type='button') buy now





